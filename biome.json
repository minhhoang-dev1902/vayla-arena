{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true,
		"defaultBranch": "develop"
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": {
					"level": "error",
					"fix": "safe"
				},
				"noConstAssign": {
					"level": "error",
					"fix": "safe"
				},
				"noUnusedVariables": "error",
				"noUnusedFunctionParameters": "error",
				"useHookAtTopLevel": "error",
				"useExhaustiveDependencies": "error",
				"useJsxKeyInIterable": "error",
				"useValidForDirection": "error"
			},
			"style": {
				"useSelfClosingElements": {
					"level": "error",
					"fix": "safe"
				},
				"useExportType": {
					"level": "error",
					"fix": "safe"
				},
				"useImportType": {
					"level": "error",
					"fix": "safe"
				},
				"useTemplate": {
					"level": "error",
					"fix": "safe"
				},
				"useConst": {
					"level": "error",
					"fix": "safe"
				}
			},
			"complexity": {
				"noUselessSwitchCase": {
					"level": "error",
					"fix": "safe"
				}
			},
			"suspicious": {
				"noArrayIndexKey": "error",
				"noDebugger": "error",
				"noEmptyBlockStatements": "error",
				"noEmptyBlock": "error",
				"noDuplicateCase": "error",
				"noDoubleEquals": "error",
				"noVar": {
					"level": "error",
					"fix": "safe"
				},
				"noConsole": {
					"level": "error",
					"options": {
						"allow": ["assert", "error", "info", "warn"]
					}
				}
			},
			"security": {
				"noDangerouslySetInnerHtml": "error",
				"noGlobalEval": "error"
			},
			"performance": {
				"noAccumulatingSpread": "error",
				"noAwaitInLoops": "error",
				"noBarrelFile": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"lineWidth": 100,
			"quoteStyle": "double",
			"arrowParentheses": "asNeeded",
			"bracketSpacing": true,
			"semicolons": "always"
		}
	},
	"css": {
		"linter": {
			"enabled": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 80,
			"quoteStyle": "double"
		},
		"parser": {
			"tailwindDirectives": true
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"lineWidth": 80,
			"indentWidth": 2,
			"indentStyle": "tab",
			"trailingCommas": "none"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
